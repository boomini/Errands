<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2560">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:theme="@style/AppTheme.NoActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@drawable/maincolor"
            android:splitMotionEvents="false">

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세정보"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/nanumsquareroundeb"
                />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/map_mv_mapcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1600"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:weightSum="1960">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_weight="180"
            android:weightSum="1440">

            <TextView
                android:id="@+id/Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1300"
                android:background="#ffffff"
                android:text="제목"
                android:textColor="#000000"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_weight="180"
            android:weightSum="1440">

            <TextView
                android:id="@+id/Start"
                android:text="출발지"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1300"
                android:textSize="15sp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:maxLength="10"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="180"
            android:weightSum="1440">

            <TextView
                android:id="@+id/End"
                android:text="도착지"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:maxLength="10"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="180"
            android:weightSum="1440">

            <TextView
                android:id="@+id/Cash"
                android:text="가격"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:maxLength="10"/>

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="180"
            android:weightSum="1440">

            <TextView
                android:id="@+id/Content"
                android:text="심부름 내용을 간략히 적으세요"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:maxLength="50"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="180"
            android:weightSum="1440">
            <net.daum.mf.map.api.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout> <!-- weightSum 12 끝 -->

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="300">

        <Button
            android:id="@+id/btn_navi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_shape"
            android:text="길찾기" />
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_height="30dp"
            android:background="@drawable/button_shape"
            android:text="수락하기" />
    </LinearLayout>
</LinearLayout>